<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="50dp">

    <ImageView
        android:id="@+id/iv_activity_shop_item"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/activity_shop_sample_image" />

    <TextView
        android:id="@+id/tv_activity_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/browser_actions_title_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_activity_shop_item"
        tools:text="3단 기본형 근조화환" />

    <TextView
        android:id="@+id/tv_activity_shop_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/item_activity_shop_originalPrice"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_activity_shop_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_shop_title"
        tools:text="80,080원" />

    <TextView
        android:id="@+id/tv_activity_shop_sales_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/item_activity_shop_salesPrice"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_activity_shop_original_price"
        app:layout_constraintStart_toEndOf="@+id/tv_activity_shop_original_price"
        app:layout_constraintTop_toTopOf="@+id/tv_activity_shop_original_price"
        tools:text="77,000" />

    <TextView
        android:id="@+id/tv_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_activity_shop_won"
        android:textColor="@color/item_activity_shop_won"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_activity_shop_sales_price"
        app:layout_constraintStart_toEndOf="@+id/tv_activity_shop_sales_price"
        app:layout_constraintTop_toTopOf="@+id/tv_activity_shop_sales_price" />

    <TextView
        android:id="@+id/tv_activity_shop_sales_rates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textColor="@color/item_activity_shop_rate"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_won"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toEndOf="@+id/tv_won"
        app:layout_constraintTop_toTopOf="@+id/tv_won"
        app:layout_constraintVertical_bias="0.0"
        tools:text="4%" />
</androidx.constraintlayout.widget.ConstraintLayout>